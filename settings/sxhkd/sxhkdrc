#Brave browser
super + w
    brave

#Mullvad browser
super + m 
    ~/AppImages/mullvad-browser/Browser/start-mullvad-browser --detach

#Emacs client
super + e
    emacsclient -c

#Rofi
super + r
    rofi -show drun

#Thunar
super + t
    krusader

#Power Manager
super + z
    xfce4-power-manager -c

# Obsidian
super + o
    obsidian

#archlinux-logout
super + x
    archlinux-logout

#Pavucontrol
super + v
    pavucontrol

#Change wallpaper
super + b
    ~/.config/qtile/scripts/bgaction

#alacritty
super + Return
    alacritty

#Xkill
super + Escape
    xkill

#Keyboard dependent
#alacritty
super + KP_Enter
	alacritty

#dmenu
super + space
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=16'

#################################################################
# SUPER + SHIFT KEYS
#################################################################

# Shutdown
super + shift + p
     alacritty -e shutdown now

# Reboot 
super + shift + i
     alacritty -e reboot

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

